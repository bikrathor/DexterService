<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back_rectangle_border_black"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/profile_curr_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="100"
                android:background="@null"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_rectangle_border_black"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/profile_new_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="100"
                android:background="@null"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_rectangle_border_black"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/profile_conf_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="100"
                android:background="@null"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/updatePassButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/back_button_round_green"
            android:text="Change Password"
            android:textColor="#ffff" />

    </LinearLayout>
</ScrollView>